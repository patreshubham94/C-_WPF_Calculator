        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeWithCompiledMarkup"
        mc:Ignorable="d"
        Title="StylesDemo" Height="450" Width="800">
    
    <StackPanel>
        <Button  Style="{StaticResource ResourceKey=BluebuttonStyle}" Content="Button1"  Margin="10" x:Name="button1"></Button>
        <Button  Style="{StaticResource ResourceKey=BluebuttonStyle}" Content="Button2"  Margin="10" x:Name="button2"></Button>
        <Button  Style="{StaticResource ResourceKey=RedbuttonStyle}" Content="Button3"  Margin="10" x:Name="button3"></Button>
        <Button  Style="{StaticResource ResourceKey=RedbuttonStyle}" Content="Button4"  Margin="10" x:Name="button4"></Button>
        <Button  Style="{StaticResource ResourceKey=RedbuttonStyle}" Content="Button5"  Margin="10" x:Name="button5"></Button>
                   
    </StackPanel>
